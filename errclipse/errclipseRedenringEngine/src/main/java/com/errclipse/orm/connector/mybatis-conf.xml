<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${errclipse.db.driver}" />
				<property name="url" value="${errclipse.db.url}" />
				<property name="username" value="${errclipse.db.username}" />
				<property name="password" value="${errclipse.db.passwd}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/errclipse/orm/connector/sqlMapping.xml" />
	</mappers>
</configuration>